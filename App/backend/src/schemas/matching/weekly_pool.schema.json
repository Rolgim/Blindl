{
  "$id": "weekly_pool.schema.json",
  "type": "object",
  "required": ["user_id", "week", "matches"],
  "properties": {
    "user_id": { "$ref": "../common/uuid.schema.json" },
    "week": {
      "type": "string",
      "pattern": "^\\d{4}-W\\d{2}$"
    },
    "matches": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": { "$ref": "match.schema.json" }
    }
  }
}
