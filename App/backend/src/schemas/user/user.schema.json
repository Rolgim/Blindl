{
  "$id": "user.schema.json",
  "type": "object",
  "required": ["id", "email", "created_at"],
  "properties": {
    "id": { "$ref": "../common/uuid.schema.json" },
    "email": { "type": "string", "format": "email" },
    "is_active": { "type": "boolean", "default": true },
    "created_at": { "$ref": "../common/timestamp.schema.json" }
  }
}